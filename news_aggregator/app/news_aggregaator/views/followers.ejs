<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/profile_index.css" />
    <link rel="stylesheet" href="/styles/homepage_global.css" />
    <link rel="stylesheet" href="/styles/homepage_index.css" />
    <style>
      .user-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 30px;
      }

      .user-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid #ccc;
        padding: 15px 20px;
        border-radius: 10px;
        background-color: #f9f9f9;
      }

      .user-info {
        display: flex;
        flex-direction: column;
      }

      .user-info a {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        text-decoration: none;
      }

      .user-info span {
        font-size: 0.95rem;
        color: #555;
      }

      .back-btn {
        margin-top: 30px;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        background-color: #333;
        color: white;
        border-radius: 8px;
        cursor: pointer;
      }

      .back-btn:hover {
        background-color: #555;
      }
    </style>
  </head>

  <body>
    <div class="home-desktop" data-animate-on-scroll>
      <div class="header">
        <img class="header-child" alt="" src="" />
        <button class="home" onclick="redirectToUrl('/home')" style="font-weight: bold;">Home</button>
        <button class="search" onclick="redirectToUrl('/search')" style="font-weight: bold;">Search</button>
        <button class="create-post" onclick="redirectToUrl('/createpost')" style="font-weight: bold;">Create Post</button>
        <button class="profile" onclick="redirectToUrl('/profile')">
          <img src="/images/profile.png" />
        </button>
      </div>

      <div class="container" style="margin-top: 40px;">
        <h1><%= title %></h1>

        <div class="user-list">
          <% users.forEach(user => { %>
            <div class="user-card">
              <div class="user-info">
                <a href="/profile/<%= user._id %>"><%= user.name %></a>
                <span><%= user.email %></span>
              </div>
            </div>
          <% }); %>
        </div>

        <a href="/profile/<%= profileId %>">
          <button class="back-btn">Back to Profile</button>
        </a>
      </div>
    </div>

    <script>
      function redirectToUrl(fullUrl) {
        window.location.href = fullUrl;
      }
    </script>
  </body>
</html>
